{
	"compilerOptions": {
		"module": "es2015",
		"moduleResolution": "node",
		"target": "es5",
		"strict": true,
		"noImplicitReturns": true,
		"experimentalDecorators": true,
		"rootDir": ".",
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,
		"lib": [
			"dom",
			"es2017"
		],
		"baseUrl": "./",
		"paths": {
			"@/*": [
				"src/*"
			]
		}
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
